<h1><%= @employee.full_name %></h1>
<p>Email: <%= @employee.email %></p>

<h3>Jobs</h3>
<ul>
    <% @jobs.each do |job| %>
        <li>
            <%= link_to job.title, job_path(job) %>
        </li>
    <% end %>
</ul>

<h3>Assignments</h3>
<ul>
    <% @projects.each do |project| %>
        <li>
            <%= link_to project.name, project_path(project) %>
        </li>
    <% end %>
</ul>