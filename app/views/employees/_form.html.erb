<%= form_for :employee, url: employees_path do |f| %>
    <% if @employee.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this project from being created:</h2>
            <ul>
                <% @employee.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <p>
        <%= f.label :first_name %>
        <%= f.text_field :first_name, :pattern => '^[A-z\']{2,15}$' %><br />
        
        <%= f.label :last_name %>
        <%= f.text_field :last_name, :pattern => '^[A-z\']{2,15}$' %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>