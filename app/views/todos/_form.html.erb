<%= form_for(@todo, :remote => defined?(remote) ? remote : false) do |f| %>
  <% if @todo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@todo.errors.count, "error") %> prohibited this todo from being saved:</h2>

      <ul>
      <% @todo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-field col s6">
    <%= f.text_field :title %>
    <%= f.label :title, :class => "" %>
  </div>
  <% if !defined?(quick) || quick == false %>
      <div class="input-field col s12">
        <%= f.label :description %>
        <%= f.text_area :description, :class => "materialize-textarea" %>
      </div>
      <div class="input-field col s12">
          <%= f.collection_select( :child_ids, @todos, :id, :title, {}, {:multiple => true} ) %>
          <%= f.label :children %>
      </div>
      <div class="input-field col s12">
          <%= f.collection_select( :parent_ids, @todos, :id, :title, {}, { :multiple => true } ) %>
          <%= f.label :parents %>
      </div>
      <div id="add_attachments" class="fields">
          <%= f.fields_for(:datafiles, Datafile.new) do |ff| %>
              <a href="#" id="add_attachment">Add attachments</a>
          <% end %>
      </div>
      <% if @datafiles.count > 0 %>
          <h3>Remove attachments</h3>
          <ul id="remove_attachments">
              <%= render @datafiles %>
          </ul>
      <% end %>
  <% end %>
  <div class="field">
    <%= f.label :due %><br>
    <input type="datetime-local" class="datepicker" name="todo[due]" id="todo[due]" value="" />
  </div>
  <div class="">
    <%= f.label :completed %><br>
    <%= f.check_box :completed, :class => "mdl-checkbox__input" %>
  </div>
  <div class="actions">
    <button class="btn waves-effect waves-light" type="submit" name="commit">Submit
        <i class="material-icons right">send</i>
    </button>
  </div>
<% end %>
