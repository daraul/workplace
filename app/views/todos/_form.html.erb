<%= form_for(@todo) do |f| %>
  <% if @todo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@todo.errors.count, "error") %> prohibited this todo from being saved:</h2>

      <ul>
      <% @todo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <% if @datafiles.count > 1 %>
      <h3 id="todo_attachments">Delete attachments</h3>
      <ul>
          <% @datafiles.each do |file| %>
              <li><%= link_to file.attachment_file_name, todo_datafile_path(@todo, file), method: :delete, data: {confirm: "Are you sure? This will delete this file."}, :title => "Delete this file."  %></li>
          <% end %>
      </ul>
  <% end %>
  <%= f.fields_for(:datafiles, Datafile.new) do |ff| %>
      <div class="field">
          <%= ff.label :attachment, "Add attachments" %>
          <%= ff.file_field :attachment, :multiple => true, :name => "todo[datafiles_attributes][][attachment]" %>
      </div>
  <% end %>
  <div class="field">
      <%= f.label :children %><br>
      <%= f.collection_select( :child_ids, @todos, :id, :title, {}, html_options = { :multiple => true } ) %>
  </div>
  <div class="field">
      <%= f.label :parents %><br>
      <%= f.collection_select( :parent_ids, @todos, :id, :title, {}, html_options = { :multiple => true } ) %>
  </div>
  <div class="field">
    <%= f.label :due %><br>
    <%= f.datetime_select :due, default: Time.now + 1.hour %>
  </div>
  <div class="field">
    <%= f.label :completed %><br>
    <%= f.check_box :completed %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
