<h1 class="title"><%= link_to(todo.title, todo) %></h1>

<%= form_for(todo, remote: true) do |f| %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= f.check_box :completed, :id => "", :class => "completed" %>
  <%= f.submit %>
<% end %>

<% if defined?(title) && title == true %>
<% else %>
  <h3 id="attachments">Attachments: </h3>
  <ul>
    <%= render @datafiles %>
  </ul>
  <p class="description"><%= todo.description %></p>
  <p>Due: <%= todo.due %></p>
  <p>Completed: <%= todo.completed.to_s %></p>
<% end %>
<%= link_to 'Edit', edit_todo_path(todo) %>
<%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %>