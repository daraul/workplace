$("#todos").html("<%= escape_javascript(render @todos, title: true) %>");

<% if @current_todo != nil %>
    $("#todo").html("<%= escape_javascript(render @current_todo) %>");
    $("#parents").html("<%= escape_javascript(render @current_parents) %>");
    $("#children").html("<%= escape_javascript(render @current_children) %>");
<% end %>


