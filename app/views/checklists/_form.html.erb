    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
      <%= f.label :children %><br>
      <%= f.collection_select( :child_ids, @checklists, :id, :title, {}, html_options = { :multiple => true } ) %>
  </div>
  <div class="field">
      <%= f.label :parents %><br>
      <%= f.collection_select( :parent_ids, @checklists, :id, :title, {}, html_options = { :multiple => true } ) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
