<%= form_for :job, url: jobs_path do |f| %>
    <ul>
        <% @job.errors.full_messages.each do |error| %>
            <li><%= error %></li>
        <% end %>
    </ul>
    <p>
        <%= f.label :title %><br />
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :description %><br />
        <%= f.text_area :description %>
    </p>
    <p>
        <%= f.label :employee_id %>
        <%= f.collection_select(:employee_id, Employee.all, :id, :full_name) %>
    </p>
    <p>
        <%= f.label :project %>
        <%= f.collection_select(:project_id, Project.all, :id, :name) %>
    </p>
    <p>
        <%= f.label :complete %>
        <%= f.check_box :complete %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>