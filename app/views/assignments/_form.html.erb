<%= form_for(@assignment, html: {multipart: true}) do |f| %>
    <ul>
        <% @assignment.errors.full_messages.each do |error| %>
            <li><%= error %></li>
        <% end %>
    </ul>
    <p>
        <%= f.label :user_id %>
        <%= f.collection_select(:user_id, User.all, :id, :full_name) %>
    </p>
    <p>
        <%= f.label :project_id %>
        <%= f.collection_select(:project_id, Project.all, :id, :name) %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>